<section class="collection-page-fullwidth collection-mansory">

  <div class="filter-to-left">
    <div class="filter_sidebar">
      <div class="close_filter">{{'products.product.close' | t}} <i class="ti-close"></i></div>
      {% include 'collection-sidebar' %}
    </div>
  </div>
  
  <div class="js_filtermobile d-block d-lg-none">
    <span class="jsclick_mnfilter engoc-filter-mobile">
      <i class="ti-filter icon_jsfilter_mobile"></i>
      <i class="ti-close icon_jsfilter_mobileadd"></i>
    </span>
  </div>
  
   {% if section.settings.ena_list_col %}
  <div class="container container-casa banner-collection">
    <div class="row justify-content-center">
      <div class="col-lg-9">
        <div class="row slickjs-collection-v2-2 ">
          {% if section.blocks.size > 0 %}
          {% for block in section.blocks %}
          {% if block.type == 'banner_collection' %}
          <div class="col-lg-3">
            <div class="item">
              <div class="box-img">
                <a href="{{block.settings.brand_url}}">
                  {% if block.settings.brand_img != blank %}
                  <img src="{{block.settings.brand_img|img_url:'master'}}" class="img-fluid" alt="collection">
                  {% else %}
                  <img src="https://placehold.it/330x330" class="img-fluid" alt="collection">
                  {% endif %}
                </a>
              </div>
              {% if block.settings.block_content != blank %}
              <div class="category-info">
                <a href="{{block.settings.brand_url}}" class="content-box mb-0">{{block.settings.block_content}}</a>
                {% endif %}
              </div>
            </div>
          </div>
          {% endif %}
          {% endfor %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
   {% endif %}
 
  <div class="content-page">
    <div class="container container-casa">
      <div class="row shop_control " >
        <div class="col-lg-6" >
          <div class="filter_sortby">
            {% if section.settings.ena_filter2 %}
            	{% include 'collection-sorting' %}
            {% endif %}
          </div>  
        </div>
        <div class="col-lg-6">
          <div class="filter-drop-right right">
            {% if section.settings.ena_filter %}
            <a class="filter js_filter" data-toggle="collapse" data-target="#demo" href="javascript:void(0)">
              <svg version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                   viewBox="0 0 485.008 485.008" style="enable-background:new 0 0 485.008 485.008;" xml:space="preserve">
                <g>
                  <g>
                    <path d="M171.501,464.698v-237.9l-166.3-192.6c-8.9-10.9-7.9-33.3,15.1-33.3h443.6c21.6,0,26.6,19.8,15.1,33.3l-162.3,187.5v147.2
                             c0,6-2,11.1-7.1,15.1l-103.8,95.8C193.801,488.698,171.501,483.898,171.501,464.698z M64.701,41.298l142.2,164.3c3,4,5,8.1,5,13.1
                             v200.6l64.5-58.5v-146.1c0-5,2-9.1,5-13.1l138.1-160.3L64.701,41.298L64.701,41.298z"/>
                  </g>
                </g>

              </svg>
              <p class="mb-0">{{'products.product.filter' | t}}</p>
            </a>
            {%  endif  %} 
          </div>
        </div> 
      </div>  
      
      <div id="demo" class="collapse filter_ver2">
        <div class="filter_sidebar row engoj-collection-sidebar engoc_sw_filter_tag">
         {% include 'collection-droplist' %}
        </div>  
      </div>
      <div class="clearfix relative collection_prod">   
        <div class="product-grid-view {% if section.settings.prod_layout == 'prod_grid' %}active{% endif %} ">
          <div class=" product-mansory">
            <div class="grid-uniform">

              {% assign module = collection.all_products_count | modulo:11 %}
              {% assign count = collection.all_products_count | minus:module | divided_by:11 | plus:1 %}
              {% assign x = 0 %}
              <div class="row">
                {% for i in (1..count) %}
                <div class="col-lg-6">
                    {% assign product = collection.products[x]%}
                    {% assign x = x | plus:1 %}
                    {% if product != blank %}
                    <div class="">
                      {% if section.settings.style_select_product == "style_1" %}
                      {% include 'product-item-v2' %}
                      {% elsif section.settings.style_select_product == "style_2" %}
                      {% include 'product-item-v2-1' %}
                      {% endif %}
                    </div>
                    {% endif %}

                </div>
                
                <div class="col-lg-6">
                  <div class="row">
                    {% assign product = collection.products[x]%}
                    {% assign x = x | plus:1 %}
                    {% if product != blank %}
                    <div class="col-6 ">
                      {% if section.settings.style_select_product == "style_1" %}
                      {% include 'product-item-v2' %}
                      {% elsif section.settings.style_select_product == "style_2" %}
