{% paginate blog.articles by {{section.settings.posts_limit}} %}

<section>
  <div class="wrap-bread-crumb breadcrumb_collection2 about">
    <div class="text-center bg-breadcrumb" style="background-image : url({% if section.settings.bg_breadcrumb != blank  %}{{section.settings.bg_breadcrumb | img_url : 'master'}} {% else %}//placehold.it/1920x510 {% endif %})">
      <div class="title-page">

        <h2 class="">{{blog.title}}</h2>

      </div>
      {% include 'breadcrumb' %}
    </div>
  </div>
  <!-- End Bread Crumb -->
  <div class="content-page blog-page">
    <div class="container container-casa">
      <div class="content-blog-page row">
        {% if section.settings.blog_layout == "blog_layo_left" %}
        <div class="col-lg-4 col-xl-3 ">
          {% include 'blog-sidebar' %}
        </div>
        {% endif %}

        <div style="{% if section.settings.blog_layout == "blog_layo_none" and section.settings.blog_template == "blog_classic" %} max-width: 1040px; margin: 0 auto {% endif %}" class="blog-list-view {% if section.settings.blog_layout == "blog_layo_none" %} col-lg-12 {% else %} col-lg-8 col-xl-9 {% endif %}">
          <div class="row">       
            {% if section.settings.blog_template == "blog_classic" %}
            {% assign module= blog.articles_count  | modulo : 6 %}
            {% assign count = blog.articles_count | minus : module | divided_by: 6 | plus : 1%}
            {% assign x = 0 %}
            {% for i in (1..count) %}			
            <div class="col-lg-12 blog_classic one">
              <div class=" row">
                {% for i in (1..1)%}
                {% assign article = blog.articles[x] %}
                {% assign x= x | plus :1 %}
                {% if article != blank %}

                <div class="col-12 col-lg-12 portfolio1">
                  <div class="blog-post">
                    <div class="box-img">                      
                        <a href="{{ article.url }}" class="adv-thumb-link"><img class="w-100" src="{{ article.image.src | img_url: 'original' }}" alt="{{ article.title }}"></a>
                    </div>
                    <div class="blog-info">
                      <div class="row cate-date align-items-center">               
                        <div class="col-lg-6 col-5">
                          <div class="cate">                                    
                            {% if section.settings.show_cate %}                 
                            <a href="{{blog.url}}" class="silver">{{blog.title}}</a>
                            {% endif %}
                          </div>
                        </div>
                        <div class="col-lg-6 col-7">
                          <div class="date right">
                            {% if section.settings.show_datetime%}
                            <span><i class="icon-clock mr-2"></i>{{article.published_at | date: "%d.%B.%Y" }}</span>
                            {% endif %}
                          </div>
                        </div>
                      </div>
                      <h2 class="article_title"><a href="{{ article.url }}">{{ article.title  }}</a></h2>
                      <div class="cmt-author">
                        {% if section.settings.show_author %}
                        <span class="author">{{'blogs.article.by' | t}} <a href="{{ article.url }}">{{ article.author }}</a></span>
                        {% endif %}
                      </div> 

                      {% if section.settings.show_summary %}
                      <p class="post-excerpt-content mb-0">{{ article.content | strip_html | truncatewords: 60 }}</p>
                      {% endif %}

                      {% if section.settings.show_btn %}
                      <a href="{{ article.url }}" class="shop-button ">{{ 'blogs.article.continue' | t }}  <i class="icon-arrow-next ml-2"></i></a>
                      {% endif %}
                    </div>
                  </div>
                </div>
                {% endif %}
                {% endfor %}
              </div>
            </div>

            <div class="col-lg-12">
              <div class="blog_classic tow">
                {% for i in (1..2)%}
                {% assign article = blog.articles[x] %}
                {% assign x= x | plus :1 %}
                {% if article != blank %}

                <div class="row blog-post">
                  
                    <div class="col-lg-5 col-md-5">
                      <div class="box-img">
                        <a href="{{ article.url }}" class="adv-thumb-link"><img class="w-100" src="{{ article.image.src | img_url: 'original' }}" alt="{{ article.title }}"></a>
                      </div>
                    </div>                      

                    <div class="col-lg-7 col-md-7">
                      <div class="blog-info">
                        <div class="row cate-date align-items-center">               
                          <div class="col-lg-6 col-5 col-md-5">
                            <div class="cate">                                    
                              {% if section.settings.show_cate %}                 
                              <a href="{{blog.url}}" class="silver">{{blog.title}}</a>
                              {% endif %}
                            </div>
                          </div>
                          <div class="col-lg-6 col-7 col-md-7">
                            <div class="date right">
                              {% if section.settings.show_datetime%}
                              <span><i class="icon-clock mr-2"></i>{{article.published_at | date: "%d.%B.%Y" }}</span>
                              {% endif %}
                            </div>
                          </div>
                        </div>
                        <h2 class="article_title"><a href="{{ article.url }}">{{ article.title  }}</a></h2>
                        <div class="cmt-author">
                          {% if section.settings.show_author %}
                          <span class="author">{{'blogs.article.by' | t}} <a href="{{ article.url }}">{{ article.author }}</a></span>
                          {% endif %}
                        </div> 

                        {% if section.settings.show_summary %}
                        <p class="post-excerpt-content mb-0">{{ article.content | strip_html | truncatewords: 30 }}</p>
                        {% endif %}

                        {% if section.settings.show_btn %}
                        <a href="{{ article.url }}" class="shop-button ">{{ 'blogs.article.continue' | t }}  <i class="icon-arrow-next ml-2"></i></a>
                        {% endif %}
                      </div>
                    </div>
                  
                </div>  
                  {% endif %}
                  {% endfor %}
                
              </div>
            </div>

            {% endfor %}

            {% elsif section.settings.blog_template == "blog_standar" %}
            {% for article in blog.articles %}
            <div class="col-12 blog_standar">
              <div class="blog-post">
                <div class="box-img">                      
                  <a href="{{ article.url }}" class="adv-thumb-link"><img class="w-100" src="{{ article.image.src | img_url: 'original' }}" alt="{{ article.title }}"></a>
                </div>
                <div class="blog-info">
                  <div class="row cate-date align-items-center">               
                    <div class="col-lg-6 col-5">
                      <div class="cate">                                    
                        {% if section.settings.show_cate %}                 
                        <a href="{{blog.url}}" class="silver">{{blog.title}}</a>
                        {% endif %}
                      </div>
                    </div>
                    <div class="col-lg-6 col-7">
                      <div class="date right">
                        {% if section.settings.show_datetime%}
                        <span><i class="icon-clock mr-2"></i>{{article.published_at | date: "%d.%B.%Y" }}</span>
                        {% endif %}
                      </div>
                    </div>
                  </div>
                  <h2 class="article_title">{{article.title}}</h2>
                  <div class="cmt-author">
                    {% if section.settings.show_author %}
                    <span class="author">{{'blogs.article.by' | t}} <a href="{{ article.url }}">{{ article.author }}</a></span>
                    {% endif %}
                  </div> 

                  {% if section.settings.show_summary %}
                  <p class="post-excerpt-content mb-0">{{ article.content | strip_html | truncatewords: 60 }}</p>
                  {% endif %}

                  {% if section.settings.show_btn %}
                  <a href="{{ article.url }}" class="shop-button ">{{ 'blogs.article.continue' | t }}  <i class="icon-arrow-next ml-2"></i></a>
                  {% endif %}
                </div>
              </div>
            </div>

            {% endfor %}


            {% elsif section.settings.blog_template == "blog_grid" %}
            {% for article in blog.articles %}
            <div class="{% if section.settings.blog_layout == "blog_layo_left" or section.settings.blog_layout == "blog_layo_right" %} col-lg-6 {% else %}col-lg-4 {% endif %}col-md-6 col-12">
              <div class="blog_grid">
                <div class="box-img">
                  <a href="{{ article.url }}">
                    <img src="{{ article.image.src | img_url: 'original' }}" alt="{{ article.title  }}" class="img-fluid">
                  </a>				
                </div>
                <div class="info_blog">
                  {% if section.settings.show_title %}
                  <h4 class="mb-0 title-blog"><a href="{{ article.url }}">{{ article.title  }}</a></h4>
                  {% endif %}
                  {% if section.settings.show_summary %}
                  <p class="content mb-0">
                    {{ article.content | strip_html | truncatewords: 14 }}
                  </p>
                  {% endif %}                
                  {% if section.settings.show_btn %}
                  <a href="{{ article.url }}"class="button-blog"> {{'blogs.article.read_more' | t}}</a>
                  {% endif %}                
                </div>
                <div class="post-meta">
                  {% if section.settings.show_datetime %}
                  <div class="date">
                    <span class="icon"><i class="icon-clock"></i></span>
                    <span class="month">{{article.published_at | date: "%B. %d. %Y" }}</span>
                  </div>
                  {% endif %}
                  {% if section.settings.show_comment %}
                  <div class="post-comment">
                    <span class="icon"><i class="icon-comment"></i></span>
                    <span class="number">{{ article.comments_count }} Comments</span>                  
                  </div>
                  {% endif %}
                </div>                

              </div>
            </div>
            {% endfor %} 
            {% endif %}

          </div>
          {% if paginate.pages > 1 %}
          <div style=" {% if section.settings.blog_template == "blog_classic" %} padding-top: 0px; {% elsif section.settings.blog_template == "blog_grid" %} padding-top: 0px {% endif %}" class="pagi-nav {% if section.settings.blog_template == "blog_classic" %} justify-content-start {% elsif section.settings.blog_template == "blog_grid" %} justify-content-start {% endif %} ">
            {{ paginate | default_pagination | replace: '&laquo; Previous', '<i class="fa fa-angle-left"></i>' | replace: 'Next &raquo;', '<i class="fa fa-angle-right"></i>' }}
          </div>
          {% endif %}

        </div>
        
          {% if section.settings.blog_layout == "blog_layo_right" %}
          <div class="col-lg-4 col-xl-3">
            {% include 'blog-sidebar' %}
          </div>
          {% endif %}
           
        

      </div>
    </div>
  </div>

</section>

{% endpaginate %}

