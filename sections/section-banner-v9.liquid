<div data-section-id="{{ section.id }}" data-section-type="section-banner-v9" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v9" style="background-image: url({% if section.settings.backgroud_image != blank %}{{section.settings.backgroud_image|img_url:'master'}}{% else %}//placehold.it/1920x1080{% endif %})">
    <div class="container container-casa">
      <div class="row justify-content-center">
        <div class="col-lg-5">
          <div class="banner-info text-center">
            
            {% if section.settings.sub_title_banner != blank %}
            <span class="sub-title">
              {{section.settings.sub_title_banner}}
            </span>
            {% endif %}
            
            {% if section.settings.title_banner != blank %}
            <h3 class="title">{{section.settings.title_banner}}</h3>
            {% endif %}
            
            {% if section.settings.button_banner != blank %}
            <a href="{{section.settings.url_button}}" class="button-shop">{{section.settings.button_banner}}</a>
            {% endif %}
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Banner v9",
  "settings": [
	
	{
      "type": "image_picker",
      "id": "backgroud_image",
      "label": "Backgroud Image",
      "info": "1920 x 1080px recommended"
    },
	{
      "type": "text",
      "id": "sub_title_banner",
      "label": "Sub Title banner",
      "default": "HANDPICKED"
    },
	{
      "type": "text",
      "id": "title_banner",
      "label": "Title banner",
      "default": "Minimal Collection"
    },	
	
	{
      "type": "text",
      "id": "button_banner",
      "label": "button banner",
      "default": "Explore all"
    },
    {
      "type": "url",
      "id": "url_button",
      "label": "URL button banner",
      "default": "/collections/all"
    },
	
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Banner v9",
      "category": "HOME 5"
    }
  ]
}
{% endschema %}

