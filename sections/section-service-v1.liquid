<div data-section-id="{{ section.id }}" data-section-type="section-service-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="section-service-v1" style="background-image: url({% if section.settings.backgroud_image != blank %}{{section.settings.backgroud_image|img_url:'master'}}{% else %}//placehold.it/1920x365{% endif %})">
    <div class="container container-casa">
        <div class="slickjs-services-v1">
          {% if section.blocks.size > 0 %}
          {% for block in section.blocks %}
          {% if block.type == "service" %}
          <div class="padding-slick text-center itemtservice justify-content-center">
            <div class="box-service ">

              {% if block.settings.icon_svg != blank %}
              <div class="icon">
                {{block.settings.icon_svg}}
              </div>
              {% else %}              
              {% if block.settings.block_icon != blank %}
              <div class="icon">
                <i class="{{block.settings.block_icon}} "></i>
              </div>
              {% endif %}	
              {% endif %}
              
              <div class="service-content text-center">
                {% if block.settings.block_title != blank %}
                <h4 class="title">{{block.settings.block_title}}</h4>
                {% endif %}
                {% if block.settings.block_content != blank %}          	
                <p class="content">{{block.settings.block_content}}</p>
                {% endif %}
              </div>
              <div class="clearfix"></div>
            </div>
          </div>
          {% endif %}
          {% endfor %}
          {% endif %}
        </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Service v1",
  "class": "index-section",
  "settings": [
	{
      "type": "image_picker",
      "id": "backgroud_image",
      "label": "Backgroud Image",
      "info": "1920 x 365px recommended"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
    
  ],
  "blocks": [
    {
      "type": "service",
      "name": "Service V1",
      "settings": [
        {
          "type": "text",
          "id": "block_icon",
          "label": "Icon",
          "default": "icon-plane",
          "info": "[Get icon in here](https:\/\/fontawesome.com\/v4.7.0\/icons)"
        },
		{
          "type": "textarea",
          "id": "icon_svg",
          "label": "svg icon"
        },
        {
          "type": "text",
          "id": "block_title",
          "label": "Title",
          "default": " Free Shipping"
        },
        {
          "type": "textarea",
          "id": "block_content",
          "label": "Content",
          "default": " Free worldwide shipping on all Area order<br> above $100"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Service v1",
      "category": "HOME 1",
      "blocks": [
        {
          "type": "service",
          "settings": {
            "block_icon": "icon-plane",
            "block_title": " Free Shipping",
            "block_content": "Free worldwide shipping on all Area order<br> above $100"
          }
        },
        {
          "type": "service",
          "settings": {
            "block_icon": "icon-arrow",
            "block_title": " 7 Days Easy Return",
            "block_content": "Product any fault within 07 days for an<br> immediately exchange."
          }
        },
        {
          "type": "service",
          "settings": {
            "block_icon": "icon-suport",
            "block_title": "24/7 Friendly Support",
            "block_content": "Our Support Team Always Ready For You<br> to 7 days a week"
          }
        }
      ]
    }
  ]
}
{% endschema %}


