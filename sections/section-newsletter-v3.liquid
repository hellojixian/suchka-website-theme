<div data-section-id="{{ section.id }}" data-section-type="section-newsletter-v3" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  {% if settings.newsletter_form_action != blank %}
  {% assign form_action = settings.newsletter_form_action %}
  {% else %}
  {% assign form_action = '#' %}
  {% endif %}

  <div class="container container-casa">    
    <div class="section-newsletter-v3 mt-moile text-center" style="background-image: url({% if section.settings.backgroud_image != blank %}{{section.settings.backgroud_image|img_url:'master'}}{% else %}//placehold.it/1410x372{% endif %})">
      
      {% if section.settings.title_icon1 != blank %}
      <span class="icon-top text-center "><i class="{{section.settings.title_icon1}}"></i></span>
      {% endif %}
      
      {% if section.settings.title_newletter != blank %}
      <div class="title_newletter">
        <h3 class="title mb-0 ">{{section.settings.title_newletter}}</h3>
      </div>
      {% endif %}
      
      <div class="row "> 
        <div class="col-lg-12">
          <div class="newletter_email">          
            <form class="needs-validation form-inline" action="{{form_action}}" method="post">
              <div class="form-group">                           
                <input type="email" name="EMAIL" class="form-control" placeholder="{{ 'general.newsletter_form.newsletter_emailh1' | t }}" required >                 
              </div>
              <button class="btn" type="submit">{{ 'general.newsletter_form.submit' | t }}</button>
            </form>
          </div> 
        </div>
      </div>
      
    </div>    
  </div>
</div>




{% schema %}
{
  "name": "Newsletter v3",
  "settings": [
	{
      "type": "header",
      "info": "MailChimp form action URL: Setting in Login Store > Customize theme > Theme settings tab > Mailchimp",
      "content": "Newsletter"
    },
	{
      "type": "image_picker",
      "id": "backgroud_image",
      "info": "1410 x 372px recommended",
      "label": "background images brand"
    },
	{
      "type": "text",
      "id": "title_icon1",
      "label": "Icon",
      "default": "icon-mail",
      "info": "[Get icon in here](https:\/\/fontawesome.com\/v4.7.0\/icons)"
    },
	
    {
      "type": "text",
      "id": "title_newletter",
      "label": "Title Newletter",
      "default": "Casano is here for creative<br> pros to  carry, build & hack life better."
    },

    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Newsletter v3",
      "category": "HOME 3"
    }
  ]
}
{% endschema %}

