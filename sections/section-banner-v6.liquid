<div data-section-id="{{ section.id }}" data-section-type="section-banner-v6" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v6 mt-moile">
    <div class="container container-casa">
      <div class="row">        
        <div class="col-lg-6 col-md-6 col-12 col-sm-12">
          <div class="banner-box one">
            <div class="box-img">
              <a href="{{section.settings.url_button1}}">
                {% if section.settings.img_banner1 != blank %}
                <img src="{{section.settings.img_banner1 | img_url:'master'}}" class="img-fluid">
                {% else %}
                <img src="//placehold.it/690x423" class="img-fluid" alt="">
                {% endif %}
              </a>
            </div>            
            <div class="banner-info">
              {% if section.settings.title_1 != blank %}
              <h3 class="title mb-0">{{section.settings.title_1}}</h3>
              {% endif %}

              {% if section.settings.button_1 != blank %}
              <a href="{{section.settings.url_button1}}" class="button-shop">{{section.settings.button_1}}</a>
              {% endif %}
              
            </div>            
          </div>
        </div>       
        
        <div class="col-lg-6 col-md-6 col-12 col-sm-12">
          <div class="banner-box">
            <div class="box-img">
              <a href="{{section.settings.url_button2}}">
                {% if section.settings.img_banner2 != blank %}
                <img src="{{section.settings.img_banner2 | img_url:'master'}}" class="img-fluid">
                {% else %}
                <img src="//placehold.it/690x423" class="img-fluid" alt="">
                {% endif %}
              </a>
            </div>            
            <div class="banner-info">
              {% if section.settings.title_2 != blank %}
              <h3 class="title mb-0">{{section.settings.title_2}}</h3>
              {% endif %}

              {% if section.settings.button_2 != blank %}
              <a href="{{section.settings.url_button2}}" class="button-shop">{{section.settings.button_2}}</a>
              {% endif %}
              
            </div>            
          </div>
        </div>
   
        
      </div>
    </div>
  </div>
</div>
