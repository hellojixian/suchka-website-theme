  	{
      "type": "text",
      "id": "button_1",
      "label": "button 1",
      "default": "Read more"
    },
  	{
      "type": "url",
      "id": "url_button1",
      "label": "URL button 1",
      "default": "/collections/all"
    },

	{
      "type": "header",
      "content": "setting banner 2"
    },
	{
      "type": "image_picker",
      "id": "img_banner2",
      "label": "Image",
	  "info": "690 x 423px recommended"
    },
	{
      "type": "text",
      "id": "title_2",
      "label": "Title banner 2",
      "default": "From Our Blog"
    },
  	{
      "type": "text",
      "id": "button_2",
      "label": "button 2",
