<div data-section-id="{{ section.id }}" data-section-type="section-product-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-product-v2 mt-moile">
    <div class="container container-casa">
      <div class="text-center block-title-sectionh2">
        {% if section.settings.title_section_product != blank%}
        <h3 class="block-title">{{section.settings.title_section_product}}</h3>      	
        {% endif %}
      </div>
      <div class="row product-section-v2-pdtop">
        <div class="col-lg-6">
          <div class="slick_product_trending row">    
            {% assign products_limit = section.settings.products_limit1 %}
            {% assign col = section.settings.select_collection1 %}
            {% for product in collections[col].products limit: products_limit1 %}
             <div class="col-lg-6">
              {% include 'product-item-v4' %}            
            </div>
            {% else %}
            {% for i in (1..12) %}
            <div class="col-lg-6">
              {% include 'empty-product-item' %}
            </div>
            {% endfor %}
            {% endfor %}
          </div>
        </div>
        
        <div class="col-lg-6">
          <div class="row product_trending engoc-row-equal">    
            {% assign products_limit2 = section.settings.products_limit2 %}
            {% assign col = section.settings.select_collection2 %}
            {% for product in collections[col].products limit: products_limit2 %}
            <div class=" col-lg-6 col-sm-6 item-product-right">
              {% if section.settings.style_select_product == "style_1" %}
              {% include 'product-item-v2' %}
              {% elsif section.settings.style_select_product == "style_2" %}
              {% include 'product-item-v2-1' %}
              {% endif %}
            </div>

            {% else %}
            {% for i in (1..12) %}
            <div class=" col-lg-6 col-sm-6 item-product-right">
              {% include 'empty-product-item' %}
            </div>
            {% endfor %}
            {% endfor %}
          </div>
        </div>
        
      </div>
      
        <div class="text-center button-setion">
          {% if section.settings.button != blank %}
          <a href="{{section.settings.url_button}}" class="button-shop text-center">{{section.settings.button}}</a>
          {% endif %}
        </div>
      
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Product v2",
  "settings": [
	{
      "type": "text",
      "id": "title_section_product",
      "label": "Title section Product",
      "default": "Trending PRODUCT"
    },
	{
      "type": "header",
      "content": "Info Product left"
    },
    {
      "type": "collection",
      "id": "select_collection1",
      "label": "Select Collection 1"
    },
	{
      "type": "range",
      "id": "products_limit1",
      "label": "Limit products 1",
      "min": 2,
      "max": 50,
      "step": 1,
      "default": 2
    },
	
	{
      "type": "header",
      "content": "Info Product right"
    },
	{
        "type": "select",
        "id": "style_select_product",
        "label": "Select Style product",
        "options": [
          {
            "value": "style_1",
            "label": "Style 1"
          },
          {
            "value": "style_2",
            "label": "Style 2"
          }
        ],
        "default": "style_1"
      },
    {
      "type": "collection",
      "id": "select_collection2",
      "label": "Select Collection 2"
    },
	{
      "type": "range",
      "id": "products_limit2",
      "label": "Limit products 2",
      "min": 2,
      "max": 50,
      "step": 1,
      "default": 4
    },
	
	{
      "type": "header",
      "content": "Info button"
    },

	{
      "type": "text",
      "id": "button",
      "label": "button",
      "default": "ALL PRODUCTS"
    },
    {
      "type": "url",
      "id": "url_button",
      "label": "URL button ",
      "default": "/collections/all"
    },	

    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Product v2",
      "category": "HOME 2"
    }
  ]
}
{% endschema %}

