<div data-section-id="{{ section.id }}" data-section-type="section-newsletter-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  {% if settings.newsletter_form_action != blank %}
  {% assign form_action = settings.newsletter_form_action %}
  {% else %}
  {% assign form_action = '#' %}
  {% endif %}
  <div class="section-newsletter-v2 {% if section.settings.enable-pd-small %}pd-small{% endif %}" style="background-color:{{section.settings.bgsection_color}};">
    <div class="container container-casa">      
      <div class="row align-items-center">
        <div class="col-lg-7">
          <div class="info-left left">
            
            {% if section.settings.icon1 != blank %}
            <div class="icon">
              <i class="{{section.settings.icon1}}"></i>
            </div>
            {% endif %}
            
            {% if section.settings.title_newletter != blank %}
            <h3 class="title-left mb-0">{{section.settings.title_newletter}}</h3>
            {% endif %}
            
          </div>
        </div>
        <div class="col-lg-5">
          <div class="newletter_email">          
            <form class="newsletter-form-wrap form-inline" action="{{form_action}}" method="post">
              <input type="email" name="EMAIL" class="form-control" placeholder="{{ 'general.newsletter_form.newsletter_emailh1' | t }}" required >
              <button class="btn submit-newsletter" type="submit"><i class="{{section.settings.icon_button}}"></i></button>
            </form>
          </div> 
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>




{% schema %}
{
  "name": "Newsletter v2",
  "settings": [
	{
      "type": "header",
      "info": "MailChimp form action URL: Setting in Login Store > Customize theme > Theme settings tab > Mailchimp",
      "content": "Newsletter"
    },
	{
        "type": "color",
        "id": "bgsection_color",
        "label": "Background color section",
        "default": "#f2fbff"
      },
	 {
        "type": "checkbox",
        "id": "enable-pd-small",
        "label": "padding small",
        "default": true
      },
	 {
      "type": "header",
      "content": "Info left"
    },
	{
      "type": "text",
      "id": "icon1",
      "label": "Icon",
      "default": "icon-mail",
      "info": "[Get icon in here](https:\/\/fontawesome.com\/v4.7.0\/icons)"
    },
    {
      "type": "text",
      "id": "title_newletter",
      "label": "Title Newletter",
      "default": "Sign up to enjoy free U.S. shipping and returns<br> on your first order."
    },
	{
      "type": "text",
      "id": "icon_button",
      "label": "Icon BUtton ",
      "default": "icon-arrow-next",
      "info": "[Get icon in here](https:\/\/fontawesome.com\/v4.7.0\/icons)"
    },
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "Newsletter v2",
