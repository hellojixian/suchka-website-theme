<div data-section-id="{{ section.id }}" data-section-type="section-banner-v1" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v1 mt-moile">
    <div class="container container-casa">
      <div class="row">        
        <div class="col-lg-6 col-md-6 ">
          <div class="box-banner ">
            <div class="box-img">
              <a href="{{section.settings.url_banner1}}">
                {% if section.settings.img_banner1 != blank %}
                <img src="{{section.settings.img_banner1 | img_url:'master'}}" class="img-fluid">
                {% else %}
                <img src="//placehold.it/690x640" class="img-fluid" alt="">
                {% endif %}
              </a>
            </div>

            <div class="info-banner-top ">
              {% if section.settings.title_1 != blank %}
              <h3 class="title mb-0">{{section.settings.title_1}}</h3>
              {% endif %}
              {% if section.settings.sub-title1 != blank %}
              <span class="sub-title">
                {{section.settings.sub-title1}}
              </span>
              {% endif %}
              
              {% if section.settings.button_1 != blank %}
              <a href="{{section.settings.url_button1}}" class="button-shop">{{section.settings.button_1}}</a>
              {% endif %}
            </div>
          </div>
        </div>

        <div class="col-lg-6 col-md-6 ">
          <div class="box-banner ">
            <div class="box-img">
              <a href="{{section.settings.url_banner2}}">
                {% if section.settings.img_banner2 != blank %}
                <img src="{{section.settings.img_banner2 | img_url:'master'}}" class="img-fluid">
                {% else %}
                <img src="//placehold.it/690x640" class="img-fluid" alt="">
                {% endif %}
              </a>
            </div>

            <div class="info-banner-top ">
              {% if section.settings.title_2 != blank %}
              <h3 class="title mb-0">{{section.settings.title_2}}</h3>
              {% endif %}
              {% if section.settings.sub-title2 != blank %}
              <span class="sub-title">
                {{section.settings.sub-title2}}
              </span>
              {% endif %}
              {% if section.settings.button_2 != blank %}
              <a href="{{section.settings.url_button2}}" class="button-shop">{{section.settings.button_2}}</a>
              {% endif %}
              
            </div>

            
          </div>
        </div>



      </div>
    </div>
  </div>
</div>
